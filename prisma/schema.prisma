// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// User & Authentication
// ============================================
model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  avatarUrl String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  // Relations
  ownedProjects  Project[]
  projectMembers ProjectMember[]
  assignedItems  WorkItem[]      @relation("WorkItemAssignee")
  createdItems   WorkItem[]      @relation("WorkItemCreator")
  messages       Message[]

  @@index([email])
  @@index([deletedAt])
  @@map("users")
}

// ============================================
// Mode Templates
// ============================================
model ModeTemplate {
  id          String   @id @default(cuid())
  name        String   @unique
  description String
  slug        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Template configuration
  defaultWorkItemTypes WorkItemType[]
  defaultViews         String[]       // e.g., ["board", "list", "tree"]
  aiSystemPrompt       String         @db.Text

  // Relations
  projects Project[]

  @@index([slug])
  @@map("mode_templates")
}

// ============================================
// Project Management
// ============================================
model Project {
  id          String        @id @default(cuid())
  name        String
  description String?
  slug        String        @unique
  status      ProjectStatus @default(ACTIVE)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  deletedAt   DateTime?

  // AI-generated project summary for context building
  summary          String?
  summaryUpdatedAt DateTime?

  // Mode template for project behavior
  modeTemplateId String?
  modeTemplate   ModeTemplate? @relation(fields: [modeTemplateId], references: [id])

  // Relations
  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  members   ProjectMember[]
  workItems WorkItem[]

  @@index([slug])
  @@index([ownerId])
  @@index([status])
  @@index([deletedAt])
  @@index([modeTemplateId])
  @@map("projects")
}

model ProjectMember {
  id        String     @id @default(cuid())
  role      MemberRole @default(MEMBER)
  createdAt DateTime   @default(now())
  deletedAt DateTime?

  // Relations
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@index([deletedAt])
  @@map("project_members")
}

// ============================================
// Work Items (EPIC, SPRINT, TASK, BUG, IDEA)
// ============================================
model WorkItem {
  id          String           @id @default(cuid())
  type        WorkItemType
  title       String
  description String?
  status      WorkItemStatus   @default(OPEN)
  priority    WorkItemPriority @default(MEDIUM)
  position    Int              @default(0)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  deletedAt   DateTime?

  // Acceptance criteria for the work item
  acceptanceCriteria String?

  // Relations
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  assigneeId String?
  assignee   User?   @relation("WorkItemAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)

  creatorId String
  creator   User   @relation("WorkItemCreator", fields: [creatorId], references: [id], onDelete: Cascade)

  // Parent-child relationships via WorkItemEdge
  parentEdges WorkItemEdge[] @relation("ChildWorkItem")
  childEdges  WorkItemEdge[] @relation("ParentWorkItem")

  // Branches and Artifacts
  branches  Branch[]
  artifacts Artifact[]

  @@index([projectId, type])
  @@index([projectId, status])
  @@index([assigneeId])
  @@index([creatorId])
  @@index([deletedAt])
  @@map("work_items")
}

// ============================================
// Work Item Edges (Parent-Child Relationships)
// ============================================
model WorkItemEdge {
  id        String           @id @default(cuid())
  edgeType  WorkItemEdgeType @default(PARENT_CHILD)
  createdAt DateTime         @default(now())
  deletedAt DateTime?

  // Relations
  parentId String
  parent   WorkItem @relation("ParentWorkItem", fields: [parentId], references: [id], onDelete: Cascade)

  childId String
  child   WorkItem @relation("ChildWorkItem", fields: [childId], references: [id], onDelete: Cascade)

  @@unique([parentId, childId])
  @@index([parentId])
  @@index([childId])
  @@index([deletedAt])
  @@map("work_item_edges")
}

// ============================================
// Branches (Conversation threads, can fork)
// ============================================
model Branch {
  id        String    @id @default(cuid())
  name      String?
  isDefault Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  // AI-generated rolling summary of the conversation
  summary          String?
  summaryUpdatedAt DateTime?
  // Message count at last summary generation (for triggering updates)
  summaryMessageCount Int @default(0)

  // Relations
  workItemId String
  workItem   WorkItem @relation(fields: [workItemId], references: [id], onDelete: Cascade)

  // Fork relationship (optional - if forked from another branch)
  forkedFromId String?
  forkedFrom   Branch?  @relation("BranchForks", fields: [forkedFromId], references: [id], onDelete: SetNull)
  forks        Branch[] @relation("BranchForks")

  // Fork point - the message ID where this branch was forked from
  forkPointMessageId String?

  messages  Message[]
  artifacts Artifact[]

  @@index([workItemId])
  @@index([forkedFromId])
  @@index([deletedAt])
  @@map("branches")
}

// ============================================
// Messages (Conversation history)
// ============================================
model Message {
  id        String      @id @default(cuid())
  role      MessageRole
  content   String
  metadata  Json?
  createdAt DateTime    @default(now())
  deletedAt DateTime?

  // Relations
  branchId String
  branch   Branch @relation(fields: [branchId], references: [id], onDelete: Cascade)

  // Optional: User who sent the message (for user role)
  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([branchId, createdAt])
  @@index([role])
  @@index([deletedAt])
  @@map("messages")
}

// ============================================
// Artifacts (Structured outputs)
// ============================================
model Artifact {
  id        String       @id @default(cuid())
  type      ArtifactType
  title     String
  content   Json
  version   Int          @default(1)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  deletedAt DateTime?

  // Relations
  workItemId String
  workItem   WorkItem @relation(fields: [workItemId], references: [id], onDelete: Cascade)

  // Optional: Branch where this artifact was created
  branchId String?
  branch   Branch? @relation(fields: [branchId], references: [id], onDelete: SetNull)

  @@index([workItemId, type])
  @@index([branchId])
  @@index([deletedAt])
  @@map("artifacts")
}

// ============================================
// Enums
// ============================================
enum ProjectStatus {
  ACTIVE
  ARCHIVED
  COMPLETED
}

enum MemberRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum WorkItemType {
  EPIC
  SPRINT
  TASK
  BUG
  IDEA
}

enum WorkItemStatus {
  OPEN
  IN_PROGRESS
  IN_REVIEW
  BLOCKED
  DONE
  CANCELLED
}

enum WorkItemPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum WorkItemEdgeType {
  PARENT_CHILD
  BLOCKS
  RELATES_TO
  DUPLICATES
}

enum MessageRole {
  USER
  ASSISTANT
  TOOL
  SYSTEM
}

enum ArtifactType {
  PLAN
  SPEC
  CHECKLIST
  DECISION
  CODE
  NOTE
}
